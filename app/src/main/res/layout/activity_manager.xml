<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="管理员首页"
            android:textSize="25sp"
            android:textColor="#516D2C"
            android:layout_margin="20dp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo2"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/bt_manager_updatee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询快递"
            android:textColor="#000000"
            android:background="@drawable/btn_selector"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/bt_manager_createe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="快递入库"
            android:textColor="#000000"
            android:background="@drawable/btn_selector"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/bt_manager_deletee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="快递出库"
            android:textColor="#000000"
            android:background="@drawable/btn_selector"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/bt_manager_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看本站所有快递信息"
            android:textColor="#000000"
            android:background="@drawable/btn_selector"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/bt_manager_backlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="返回登录"
            android:textColor="#000000"
            android:background="@drawable/btn_selector"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

    </LinearLayout>

</LinearLayout>
