<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    android:padding="5dp" >
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=":"
        android:textSize="22sp"
        android:textColor="#516D2C"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/id_pack"/>
        <TextView
            android1:id="@+id/c_orderid"
            android1:layout_weight="1"
            android1:gravity="center"
            android1:text="快递单号"
            android1:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/user"/>

        <TextView
            android1:id="@+id/c_username"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android1:layout_weight="1"
            android1:gravity="center"
            android1:text="收件人"
            android1:textSize="20sp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/senders"/>
        <TextView
            android1:id="@+id/c_name"
            android1:layout_weight="1"
            android1:gravity="center"
            android1:text="寄件人"
            android1:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/location"/>

        <TextView
            android1:id="@+id/c_price"
            android1:gravity="center"
            android1:text="收件地址"
            android1:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ListView
        android1:id="@+id/lst_orders"
        android:layout_width="match_parent"
        android:layout_height="537dp">

    </ListView>



</LinearLayout>